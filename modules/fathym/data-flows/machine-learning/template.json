{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "resources": [
        {
            "type": "Microsoft.MachineLearningServices/workspaces/computes",
            "apiVersion": "2020-06-01",
            "name": "[concat({{name}}, '/lcu-compute')]",
            "location": "[{{regionId}}]",
            "dependsOn": [
                "[resourceId('Microsoft.MachineLearningServices/workspaces', {{name}})]"
            ],
            "properties": {
                "computeType": "AmlCompute",
                "computeLocation": "[{{regionId}}]",
                "properties": {
                    "vmSize": "STANDARD_D12_V2",
                    "vmPriority": "Dedicated",
                    "scaleSettings": {
                        "maxNodeCount": 6,
                        "minNodeCount": 0,
                        "nodeIdleTimeBeforeScaleDown": "PT2M"
                    },
                    "remoteLoginPortPublicAccess": "Enabled"
                }
            }
        },
        {
            "type": "Microsoft.MachineLearningServices/workspaces",
            "apiVersion": "2020-06-01",
            "name": "[{{name}}]",
            "location": "[{{regionId}}]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('safename'))]",
                "[resourceId('Microsoft.ContainerRegistry/registries', parameters('safename'))]",
                "[resourceId('Microsoft.KeyVault/vaults', {{name}})]",
                "[resourceId('microsoft.insights/components', {{name}})]"
            ],
            "sku": {
                "name": "Enterprise",
                "tier": "Enterprise"
            },
            "identity": {
                "principalId": "9a3889ec-ed7f-493d-b7d2-4a92181951bc",
                "tenantId": "6dcbebd0-f8d0-4a9d-89e5-5873e8146b0a",
                "type": "SystemAssigned"
            },
            "properties": {
                "friendlyName": "[{{name}}]",
                "storageAccount": "[resourceId('Microsoft.Storage/storageAccounts', parameters('safename'))]",
                "containerRegistry": "[resourceId('Microsoft.ContainerRegistry/registries', parameters('safename'))]",
                "keyVault": "[resourceId('Microsoft.KeyVault/vaults', {{name}})]",
                "applicationInsights": "[resourceId('microsoft.insights/components', {{name}})]",
                "hbiWorkspace": false,
                "allowPublicAccessWhenBehindVnet": false,
                "discoveryUrl": "https://[{{regionId}}].experiments.azureml.net/discovery"
            }
        },
        {
            "type": "Microsoft.KeyVault/vaults/accessPolicies",
            "name": "[concat(parameters('safename'), '/add')]",
            "apiVersion": "2019-09-01",
            "properties": {
                "accessPolicies": [
                    {
                        "tenantId": "[parameters('tenantId')]",
                        "objectId": "[reference(resourceId('Microsoft.MachineLearningServices/workspaces', {{name}}), '2019-08-01', 'full').identity.principalId]",
                        "permissions": {
                            "keys": ["all"],
                            "secrets": ["all"],
                            "certificates": ["all"],
                            "storage": ["all"]
                        }
                    }
                ]
            }
        }
    ]
}