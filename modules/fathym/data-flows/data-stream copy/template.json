{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.EventHub/namespaces",
      "apiVersion": "2018-01-01-preview",
      "name": "[concat({{name}}, '-hub')]",
      "location": "[{{locationName}}]",
      "tags": {
        "Architecture": "LowCodeUnit"
      },
      "sku": {
        "name": "Standard",
        "tier": "Standard",
        "capacity": 1
      },
      "properties": {
        "zoneRedundant": false,
        "isAutoInflateEnabled": true,
        "maximumThroughputUnits": 1,
        "kafkaEnabled": false
      }
    },
    {
      "type": "Microsoft.EventHub/namespaces/AuthorizationRules",
      "apiVersion": "2017-04-01",
      "name": "[concat({{name}}, '-hub', '/RootManageSharedAccessKey')]",
      "location": "[{{locationName}}]",
      "dependsOn": ["[resourceId('Microsoft.EventHub/namespaces', concat({{name}}, '-hub'))]"],
      "properties": {
        "rights": ["Listen", "Manage", "Send"]
      }
    },
    {
      "type": "Microsoft.EventHub/namespaces/eventhubs",
      "apiVersion": "2017-04-01",
      "name": "[concat({{name}}, '-hub', '/', {{name}}, '-hub', 'dvc')]",
      "location": "[{{locationName}}]",
      "dependsOn": ["[resourceId('Microsoft.EventHub/namespaces', concat({{name}}, '-hub'))]"],
      "properties": {
        "messageRetentionInDays": 7,
        "partitionCount": 32,
        "status": "Active"
      }
    },
    {
      "type": "Microsoft.EventHub/namespaces/NetworkRuleSets",
      "apiVersion": "2018-01-01-preview",
      "name": "[concat({{name}}, '-hub', '/default')]",
      "location": "[{{locationName}}]",
      "dependsOn": ["[resourceId('Microsoft.EventHub/namespaces', concat({{name}}, '-hub'))]"],
      "properties": {
        "defaultAction": "Deny",
        "virtualNetworkRules": [],
        "ipRules": []
      }
    },
    {
        "type": "Microsoft.EventHub/namespaces/eventhubs/consumergroups",
        "apiVersion": "2017-04-01",
        "name": "[concat({{name}}, '-hub', '/', {{name}}, '-hub', 'dvc/$Default')]",
        "location": "West US",
        "dependsOn": [
            "[resourceId('Microsoft.EventHub/namespaces/eventhubs', concat({{name}}, '-hub'), concat({{name}}, '-hub', 'dvc'))]",
            "[resourceId('Microsoft.EventHub/namespaces', concat({{name}}, '-hub'))]"
        ],
        "properties": {}
    },
    {
        "type": "Microsoft.EventHub/namespaces/eventhubs/consumergroups",
        "apiVersion": "2017-04-01",
        "name": "[concat({{name}}, '-hub', '/', {{name}}, '-hub', 'dvc/lcu')]",
        "location": "West US",
        "dependsOn": [
            "[resourceId('Microsoft.EventHub/namespaces/eventhubs', concat({{name}}, '-hub'), concat({{name}}, '-hub', 'dvc'))]",
            "[resourceId('Microsoft.EventHub/namespaces', concat({{name}}, '-hub'))]"
        ],
        "properties": {}
    }
  ]
}
