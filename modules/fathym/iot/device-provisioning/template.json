{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "resources": [
    {
      "type": "Microsoft.Devices/provisioningServices",
      "apiVersion": "2020-03-01",
      "name": "[{{name}}]",
      "location": "[{{regionId}}]",
      "sku": {
        "name": "S1",
        "tier": "Standard",
        "capacity": 1
      },
      "properties": {
        "state": "Active",
        "provisioningState": "Succeeded",
        "iotHubs": [
          {
            "connectionString": "[concat('HostName=', {{name}}, '.azure-devices.net;SharedAccessKeyName=iothubowner;SharedAccessKey=****')]",
            "location": "[{{regionId}}]"
          }
        ],
        "allocationPolicy": "Hashed"
      }
    }
  ],
  "outputs": {}
}
